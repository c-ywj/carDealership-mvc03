@model IEnumerable<car_dealership.Models.Manufacturer>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Add New Manufacturer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Make)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Origin)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Make">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Make">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Make">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
